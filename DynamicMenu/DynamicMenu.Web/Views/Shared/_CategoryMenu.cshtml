@model DynamicMenu.Web.ViewModels.MenusViewModel
<div class="container col-md-2">
    <h3>Kategorie</h3>
    <ul class="nav navbar-left">
        @foreach (var rootCat in Model.Categories)
        {
            <li class="dropdown">
                <a data-toggle="dropdown" class="dropdown-toggle">@rootCat.Title</a>
            </li>
            <div class="dropdown-menu">
                @foreach (var topCategory in rootCat.Children)
                {
                    <ul>
                        <li>
                            <a class="h4" href="/@topCategory.Menu.Slug">@topCategory.Title</a>
                        </li>
                        @foreach (var category in topCategory.Children)
                        {
                            <li>
                                <a href="/@category.Menu.Slug">@category.Title</a>
                            </li>
                        }
                    </ul>
                }
            </div>
        }
    </ul>
</div>